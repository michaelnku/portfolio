generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?
  password      String?
  profileImage  Json?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  role UserRole @default(USER)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // portfolios Portfolio[]
  projects  Project[]
  contact   Contact?
  about     About?
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Project {
  id          String  @id @default(cuid())
  name        String
  role        String
  summary     String
  description String?

  liveUrl String?
  repoUrl String?

  isFlagship Boolean @default(false)
  featured   Boolean @default(false)
  published  Boolean @default(false)

  keyFeatures String[] @default([])
  techStack   Json     @default("[]")

  images ProjectImage[]

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectImage {
  id String @id @default(cuid())

  url     String
  key     String
  alt     String?
  order   Int
  isCover Boolean @default(false)

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([projectId, order])
}

